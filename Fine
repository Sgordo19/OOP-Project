package Final_Project;

import java.io.Serializable;

public class Fine implements Serializable {
    private float fineAmount;
    private String fineType;
    private String fineDescription;

    // Constructor
    public Fine(float fineAmount, String fineType, String fineDescription) {
        this.fineAmount = fineAmount;
        this.fineType = fineType;
        this.fineDescription = fineDescription;
    }

    // Getter methods
    public float getFineAmount() {
        return fineAmount;
    }

    public String getFineType() {
        return fineType;
    }

    public String getFineDescription() {
        return fineDescription;
    }

    // Setter methods (if needed)
    public void setFineAmount(float fineAmount) {
        this.fineAmount = fineAmount;
    }

    public void setFineType(String fineType) {
        this.fineType = fineType;
    }

    public void setFineDescription(String fineDescription) {
        this.fineDescription = fineDescription;
    }

    // String representation of Fine
    @Override
    public String toString() {
        return "Fine Type: " + fineType + "\nDescription: " + fineDescription + "\nAmount: " + fineAmount;
    }
}
